{
  "name": "pizzaria-backend",
  "version": "1.0.0",
  "description": "Backend service for Pizzaria application",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec 'tsx' src/server.ts",
    "build": "prisma generate && tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "prisma:studio": "npx prisma studio --url \"$DATABASE_URL\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:test": "tsx test-connection.ts",
    "postinstall": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "nodemon": "^3.1.11",
    "prisma": "^7.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  }
}
